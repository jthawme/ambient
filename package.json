{
	"name": "ambient-display",
	"version": "1.0.0",
	"description": "Like a spotify jam but much worse, but also much better. If you need it, you'll love it.",
	"type": "module",
	"bin": {
		"ambient": "./server/run.js"
	},
	"scripts": {
		"dev": "NODE_ENV=development concurrently \"npm:dev:*\"",
		"dev:frontend": "vite dev",
		"dev:server": "nodemon --ignore 'server/*.json' server",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.3",
		"@poppanator/sveltekit-svg": "^5.0.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"concurrently": "^9.1.0",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"fs-extra": "^11.2.0",
		"globals": "^15.0.0",
		"nodemon": "^3.1.7",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"sharp": "^0.33.5",
		"sharp-ico": "^0.1.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svgo": "^3.3.2",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@spotify/web-api-ts-sdk": "^1.2.0",
		"ambient-kiosk-mode": "^1.0.1",
		"ambient-sonos-fallback": "^1.0.1",
		"bunyan": "^1.8.15",
		"cors": "^2.8.5",
		"deepmerge": "^4.3.1",
		"detect-rpi": "^1.5.0",
		"dotenv": "^16.4.7",
		"express": "^4.21.1",
		"node-fetch": "^3.3.2",
		"node-vibrant": "3.1.6",
		"normalize.css": "^8.0.1",
		"qrcode-svg": "^1.1.0",
		"sass": "^1.82.0",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"sonos": "^1.14.1",
		"svelte-ionicons": "^2.0.1"
	}
}
